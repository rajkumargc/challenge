extends layout
block content
    .container
        .starter-template
            h1
            p.lead Editing details for #{user.name}

            a(class='btn tabbtn',href='/listcustomers') Go back to list
            a(class='btn tabbtn',href='/challenge2') Add New Customer

            form(method="POST", action="/user/#{user._id}")
                input(type="hidden", name="_method", value="PUT")
                p Name:
                input(type="text", name="name", value="#{user.name}")
                p Age:
                input(type="number", name="age", value="#{user.age}")
                p
                input(type="submit",value="Update")